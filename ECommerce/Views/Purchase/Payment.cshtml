@model OrderFormModel
@section Styles{
    <link rel="stylesheet" href="~/css/Order.css"/>
}
<form method="post" asp-action="Payment">
    <div class="form-group">
        <label asp-for="ReciverFirstName">First Name</label>
        <input asp-for="ReciverFirstName" class="form-control" id="firstName" aria-describedby="firstName" placeholder="Enter first name">
    </div>
    <div class="form-group">
        <label asp-for="ReciverLastName">Last Name</label>
        <input asp-for="ReciverLastName" class="form-control" id="lastName" aria-describedby="lastName" placeholder="Enter last name">
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label asp-for="Country">Country</label>
        <input asp-for="Country" class="form-control" id="country" aria-describedby="country" placeholder="Enter country">
    </div>
    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" id="city" aria-describedby="city" placeholder="Enter city">
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" id="address" aria-describedby="address" placeholder="Enter Address">
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number <span style="color:red;">(Optional)</span></label>
        <input asp-for="PhoneNumber" class="form-control" id="address" aria-describedby="address" placeholder="Enter Phone Number">

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>